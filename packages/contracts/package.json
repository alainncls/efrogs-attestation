{
  "name": "efrogs-attestation-contracts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:nft": "hardhat run scripts/deployEFrogsNFT.ts --network",
    "deploy:portal": "hardhat run scripts/deployEFrogsPortal.ts --network",
    "lint": "eslint . && solhint 'src/**/*.sol' -c .solhint.json",
    "lint:fix": "eslint . --fix",
    "test": "hardhat test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@openzeppelin/contracts": "catalog:openzeppelin",
    "@openzeppelin/contracts-upgradeable": "catalog:openzeppelin"
  },
  "devDependencies": {
    "@eslint/js": "catalog:eslint",
    "@nomicfoundation/hardhat-verify": "catalog:hardhat",
    "@nomicfoundation/hardhat-viem": "catalog:hardhat",
    "@types/node": "catalog:typescript",
    "@verax-attestation-registry/verax-contracts": "catalog:verax",
    "@verax-attestation-registry/verax-sdk": "catalog:verax",
    "eslint": "catalog:eslint",
    "globals": "catalog:eslint",
    "hardhat": "catalog:hardhat",
    "solhint": "catalog:hardhat",
    "typescript": "catalog:typescript",
    "typescript-eslint": "catalog:eslint",
    "viem": "catalog:web3"
  }
}
